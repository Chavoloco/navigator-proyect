<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.navigatorProject.binary.Node">
<!--<mapper namespace="com.solvd.navigatorProject.dao.interfaces.INodeDao">-->
    <select id="getAll" resultMap="NodeResultMap">
        SELECT id, position_x, position_y, name FROM nodes
    </select>
    <select id="getById" resultMap="NodeResultMap">
        SELECT id, position_x, position_y, name FROM nodes WHERE id = #{id}
    </select>
    <insert id="save" parameterType="Node">
        INSERT INTO nodes (position_x, position_y, name )
        VALUES ( #{position_x}, #{position_y}, #{name} );
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select last_insert_id() as id
        </selectKey>
    </insert>
    <delete id="delete" parameterType="int">
        DELETE FROM nodes WHERE id = #{id};
    </delete>
    <resultMap id="NodeResultMap" type="Node" autoMapping="false">
        <id column="id" property="id"/>
        <result column="position_x" property="positionX"/>
        <result column="position_y" property="positionY"/>
        <result column="name" property="name"/>
    </resultMap>
</mapper>